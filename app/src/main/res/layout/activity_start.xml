<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/img_11"
    tools:context=".Start">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingHorizontal="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!-- Title Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GPA Calculator"
                    android:fontFamily="@font/font10"
                    android:textSize="22sp"
                    android:textColor="@color/bluedard"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="University Of Sargodha"
                    android:textColor="@color/bluedard"
                    android:textSize="18sp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/font10"
                    android:textAlignment="center"/>
            </LinearLayout>

            <!-- Logo -->
            <ImageView
                android:id="@+id/edit"
                android:layout_width="200dp"
                android:layout_height="110dp"
                android:src="@drawable/img_21"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>

            <!-- Name Input -->
            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="60dp"
                android:layout_marginBottom="20dp"
                android:paddingVertical="16dp"
                android:paddingHorizontal="16dp"
                android:paddingStart="48dp"
                android:paddingEnd="16dp"
                android:drawableStart="@drawable/forperson"
                android:drawablePadding="12dp"
                android:background="@drawable/cust"
                android:hint="Enter Your Name"
                android:textSize="14sp"
                android:inputType="text"/>

            <!-- Subject Count Input -->
            <EditText
                android:id="@+id/pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="60dp"
                android:background="@drawable/cust"
                android:paddingVertical="16dp"
                android:paddingHorizontal="16dp"
                android:paddingStart="48dp"
                android:paddingEnd="16dp"
                android:drawablePadding="12dp"
                android:drawableStart="@drawable/forsubject"
                android:hint="How many subjects you have to find the GPA?"
                android:textSize="14sp"
                android:inputType="number"/>

            <!-- Spacer with flexible weight -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <!-- Submit Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/two"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:text="SUBMIT"
                android:fontFamily="@font/font10"
                android:background="@drawable/fourth"
                android:textColor="@color/white"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                android:textSize="16sp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>