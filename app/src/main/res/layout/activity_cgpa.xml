<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/img_11">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CGPA Calculator\n\nUniversity Of Sargodha"
                android:textAlignment="center"
                android:textColor="@color/bluedard"
                android:fontFamily="@font/font10"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:src="@drawable/img_21"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/e1"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:hint="Sem 1 GPA"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:background="@drawable/first"
                    android:layout_marginEnd="8dp"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:textColorHint="#757575"/>

                <EditText
                    android:id="@+id/e2"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:hint="Sem 2 GPA"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:background="@drawable/first"
                    android:layout_marginStart="8dp"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:textColorHint="#757575"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/e3"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:hint="Sem 3 GPA"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:background="@drawable/first"
                    android:layout_marginEnd="8dp"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:textColorHint="#757575"/>

                <EditText
                    android:id="@+id/e4"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:hint="Sem 4 GPA"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:background="@drawable/first"
                    android:layout_marginStart="8dp"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:textColorHint="#757575"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/e5"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:hint="Sem 5 GPA"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:background="@drawable/first"
                    android:layout_marginEnd="8dp"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:textColorHint="#757575"/>

                <EditText
                    android:id="@+id/e6"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:hint="Sem 6 GPA"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:background="@drawable/first"
                    android:layout_marginStart="8dp"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:textColorHint="#757575"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/e7"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:hint="Sem 7 GPA"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:background="@drawable/first"
                    android:layout_marginEnd="8dp"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:textColorHint="#757575"/>

                <EditText
                    android:id="@+id/e8"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:hint="Sem 8 GPA"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:background="@drawable/first"
                    android:layout_marginStart="8dp"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:textColorHint="#757575"/>
            </LinearLayout>

            <TextView
                android:id="@+id/t1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginTop="40dp"
                android:textStyle="bold"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/b1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="CALCULATE CGPA"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/fourth"
                android:layout_marginTop="30dp"
                android:elevation="4dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>